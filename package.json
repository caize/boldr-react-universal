{
  "name": "boldr-react-universal",
  "description": "Universal React starter based on Boldr",
  "version": "0.9.0",
  "author": "Steven Truesdell <steven@strues.io>",
  "betterScripts": {
    "build": {
      "command": "better-npm-run build:server && better-npm-run build:client && better-npm-run build:entry",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:server": {
      "command": "npm run clean:server && babel-node -- ./node_modules/.bin/webpack --env production --config tools/webpack/node.config.js",
      "env": {
        "BABEL_ENV": "server",
        "NODE_ENV": "production"
      }
    },
    "build:entry": {
      "command": "./tools/scripts/createEntry.sh"
    },
    "build:client": {
      "command": "npm run clean:client && babel-node -- ./node_modules/.bin/webpack --env production --json --config tools/webpack/client.prod.js",
      "env": {
        "BABEL_ENV": "client-prod",
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "command": "npm-run-all --parallel watch:client watch:server",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src",
        "SERVER_PORT": 3000,
        "WP_DS": 3001
      }
    },
    "start": {
      "command": "node -r dotenv/config tools/scripts/prod.js",
      "env": {
        "NODE_ENV": "production",
        "SERVER_PORT": 3000
      }
    },
    "watch:client": {
      "command": "babel-node tools/webpack/wp.dev.server.js",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src",
        "BABEL_ENV": "client-dev",
        "SERVER_PORT": 3000,
        "WP_DS": 3001
      }
    },
    "watch:server": {
      "command": "./node_modules/.bin/nodemon",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src",
        "BABEL_ENV": "server",
        "SERVER_PORT": 3000,
        "WP_DS": 3001
      }
    }
  },
  "bugs": {
    "url": "https://github.com/strues/boldr-react-universal/issues"
  },
  "dependencies": {
    "better-npm-run": "0.0.10",
    "body-parser": "^1.15.2",
    "compression": "1.6.2",
    "debug": "^2.2.0",
    "express": "4.14.0",
    "lodash": "^4.15.0",
    "react": "15.3.0",
    "react-dom": "15.3.0",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "2.6.1",
    "react-router-redux": "^4.0.5",
    "redial": "^0.4.2",
    "redux": "^3.5.2",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.1.0",
    "serialize-javascript": "1.3.0",
    "source-map-support": "0.4.2",
    "superagent": "^2.2.0",
    "webfontloader": "^1.6.26",
    "webpack-isomorphic-tools": "^2.5.7"
  },
  "devDependencies": {
    "app-root-path": "^1.3.0",
    "babel-cli": "6.11.4",
    "babel-core": "6.13.2",
    "babel-eslint": "6.1.2",
    "babel-loader": "6.2.5",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.11.6",
    "css-loader": "0.23.1",
    "cssnano": "^3.7.4",
    "dotenv": "2.0.0",
    "eslint": "^3.3.1",
    "eslint-config-boldr": "^1.1.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.3",
    "file-loader": "^0.9.0",
    "happypack": "^2.2.1",
    "json-loader": "0.5.4",
    "lost": "^7.0.4",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "normalize.css": "4.2.0",
    "npm-run-all": "^2.3.0",
    "path": "0.12.7",
    "pixrem": "^3.0.1",
    "postcss": "^5.1.2",
    "postcss-loader": "^0.10.0",
    "precss": "^1.4.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "rimraf": "2.5.4",
    "sass-loader": "^4.0.0",
